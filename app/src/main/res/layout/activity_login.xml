<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/first_use_back"
                android:orientation="vertical">

    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="44sp"
        android:textStyle="bold"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:layout_marginBottom="35dp"
                  android:gravity="center"
                  android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_weibo"
            android:layout_width="@dimen/login_btn"
            android:layout_height="@dimen/login_btn"
            android:layout_marginRight="15dp"
            android:src="@drawable/ssdk_oks_classic_sinaweibo"/>
        <ImageView
            android:id="@+id/img_qq"
            android:layout_width="@dimen/login_btn"
            android:layout_height="@dimen/login_btn"
            android:layout_marginRight="15dp"
            android:src="@drawable/ssdk_oks_classic_qq"/>

    </LinearLayout>

</RelativeLayout>